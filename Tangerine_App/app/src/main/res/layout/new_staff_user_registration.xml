<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/main_home_container1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#fff"
            android:padding="3dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backstyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/prepaid_service_layout"
                        android:padding="5dp"
                        android:elevation="@dimen/bottom_navigation_elevation"
                        android:orientation="horizontal"
                        android:background="@color/colorlycadark"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Reseller Registration"
                            android:textColor="@color/white"
                            android:fontFamily="@font/sansation_bold"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:background="@color/colorlycadark"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Staff User Information"
                            android:fontFamily="@font/sansation_bold"
                            android:layout_gravity="center"
                            android:textSize="20dp"
                            android:textColor="@color/colorBlack"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/reg_personal1_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:fitsSystemWindows="true"
                            android:paddingTop="20dp"
                            android:visibility="visible">

                            <include layout="@layout/new_staff_personal" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="10dp">

                        <Button
                            android:id="@+id/google_map"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sansation_bold"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:text="Select Reseller Region"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:paddingTop="10dp">

                        <Button
                            android:id="@+id/staff_back_button_"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sansation_bold"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:textSize="17sp"
                            android:text="Back"/>

                        <Button
                            android:id="@+id/new_staff_savecontinue_btn"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/sansation_bold"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:layout_marginLeft="10dp"
                            android:visibility="visible"
                            android:textSize="17sp"
                            android:background="@drawable/button"
                            android:text="@string/save_and_continue"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>