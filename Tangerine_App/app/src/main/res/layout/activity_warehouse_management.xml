<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new_order_main_page"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/prepaid_service_layout"
        android:padding="5dp"
        android:elevation="@dimen/bottom_navigation_elevation"
        android:orientation="horizontal"
        android:background="@color/colorlycadark"
        android:layout_height="50dp">
        <ImageButton
            android:id="@+id/back_imgbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:background="@drawable/back_arrow_white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Warehouse Stock"
            android:textColor="@color/white"
            android:fontFamily="@font/sansation_bold"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:background="@color/colorlycadark"/>
    </LinearLayout>
    <ListView
        android:id="@+id/warehouse_stock_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:dividerHeight="3dp"></ListView>


</LinearLayout>