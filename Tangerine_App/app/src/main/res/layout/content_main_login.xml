<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
android:id="@+id/layout1"
    tools:showIn="@layout/activity_main_login">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/logo_full_image"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/lycamobile"
            />


    </RelativeLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/login_button"
        android:orientation="vertical">


        <!--<ImageView
            android:id="@+id/logo_full_image"
            android:layout_width="250dp"
            android:layout_height="230dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:focusable="true"
            android:focusableInTouchMode="true"

            android:src="@drawable/user"
            />-->

        <EditText
            android:id="@+id/msisdin_number"
            style="@style/EditText.Login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/avatar16"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/user_name"
            android:inputType="textNoSuggestions"
            android:padding="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:theme="@style/EditText.Login" />

        <EditText
            android:id="@+id/signInPassword"
            style="@style/EditText.Login"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/lock16"
            android:fontFamily="@font/roboto_medium"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:padding="3dp"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:theme="@style/EditText.Login" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="5dp"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/lycagreenbutton"
            android:fontFamily="@font/roboto_medium"
            android:padding="5dp"
            android:text=" Login "
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/otp_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <EditText
                android:id="@+id/otp_number"
                style="@style/EditText.Login"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_medium"
                android:hint="Enter Otp"
                android:inputType="textNoSuggestions"
                android:padding="3dp"
                android:textColor="@color/colorBlack"
                android:textSize="17sp"
                android:theme="@style/EditText.Login" />

            <Button
                android:id="@+id/otpLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/button"
                android:fontFamily="@font/roboto_medium"
                android:padding="5dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>