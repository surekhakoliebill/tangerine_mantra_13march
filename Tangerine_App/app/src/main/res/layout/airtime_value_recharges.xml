<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@drawable/background_new_order_main_page"
    tools:openDrawer="start">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorlyca">
        <ImageButton
            android:id="@+id/back_imgbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/back_arrow_white"
            />
        <TextView
            android:id="@+id/header_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Airtime Recharges"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/sansation_bold"
            android:gravity="center|left"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!--<EditText
            android:id="@+id/serverdMSISDN_eText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/editbackground"
            android:text="256" />-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="+256"
                android:editable="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/serverdMSISDN_eText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:hint="MSISDN"
                android:maxLength="9"
                />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/check_subscription_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="Check"
            android:fontFamily="@font/sansation_bold"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:textColor="@color/white" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbackground"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <Spinner
            android:id="@+id/airtime_products_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

    <Button
        android:id="@+id/recharge_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="Recharge"
        android:visibility="gone"
        android:fontFamily="@font/sansation_bold"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:textColor="@color/white" />




</LinearLayout>
