<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new_order_main_page"
    android:layout_margin="0dp">

    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">-->
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorlyca">
            <ImageButton
                android:id="@+id/back_imgbtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/back_arrow_white"
                />
            <TextView
                android:id="@+id/header_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Topup Voucher"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/sansation_bold"
                android:gravity="center|left"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!--<EditText
            android:id="@+id/serverdMSISDN_eText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/editbackground"
            android:text="256" />-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="+256"
               android:editable="false"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/serverdMSISDN_eText"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:hint="MSISDN"
                android:maxLength="9"
                />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/check_subscription_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:text="Check"
            android:fontFamily="@font/sansation_bold"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:textColor="@color/white" />

    </LinearLayout>


    <!--<LinearLayout
        android:id="@+id/subscription_Details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/editbackground"
        android:orientation="horizontal"
        >-->

        <LinearLayout
            android:id="@+id/subscriber_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@color/whitesmoke">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backstyle"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="MSISDN:"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/msisdn_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Name:"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/name_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:id="@+id/validity_text"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Balance:"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/balance_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="Status:"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/status_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/listview_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/vouchers_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/sansation_bold"
                android:text="E-Vouchers List"
                android:textSize="20sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/colorAccent"/>


            <ListView
                android:id="@+id/vouchers_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:scrollbarSize="7dp">

            </ListView>
        </LinearLayout>
</LinearLayout>

    <!--</ScrollView>-->

</LinearLayout>