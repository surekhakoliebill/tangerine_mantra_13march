<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:background="@drawable/background_new_order_main_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorlyca">
        <ImageButton
            android:id="@+id/back_imgbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/back_arrow_white"
            />
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:background="@color/colorlycadark"
            android:text="E-Topup Recharge"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter MSISDN Number:"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/sansation_regular"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"/>
        <EditText
            android:id="@+id/msisdn_E_topup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editbackground"
            android:layout_marginLeft="15dp"
            android:hint="256XXXXXXX"/>
    </LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!--<EditText
            android:id="@+id/serverdMSISDN_eText"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/editbackground"
            android:text="256" />-->
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="+256"
                android:editable="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/sansation_bold"
                />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/serverdMSISDN_eText"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:hint="MSISDN"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/sansation_bold"
                android:maxLength="9"
                />
        </android.support.design.widget.TextInputLayout>
        <Button
            android:id="@+id/check_subscription_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:padding="3dp"
            android:text="Check"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="@font/sansation_bold"
            android:background="@drawable/button"
            android:textColor="@color/white" />

    </LinearLayout>
    <Button
        android:id="@+id/current_location"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Select Current Zone"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textSize="19sp"
        android:visibility="gone"
        android:fontFamily="@font/sansation_bold"
        android:textColor="@color/white"/>
    <LinearLayout

        android:id="@+id/amount_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-Topup Amount:"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/sansation_regular"
            android:textStyle="bold"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"/>
        <EditText
            android:id="@+id/E_topup_amount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:padding="3dp"
            android:fontFamily="@font/sansation_bold"
            android:background="@drawable/editbackground"
            android:layout_marginLeft="15dp"
            android:hint=""/>
    </LinearLayout>
    <Button
        android:id="@+id/place_order_device"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button"
        android:text="Proceed to Recharge"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textSize="19sp"
        android:fontFamily="@font/sansation_bold"
        android:textColor="@color/white"/>

</LinearLayout>