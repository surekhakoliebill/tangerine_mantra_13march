<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/billing_address"
    tools:context="com.aryagami.tangerine.fragments.BillingAddressFragment">

    <FrameLayout
        android:id="@+id/billing_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:padding="3dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backstyle">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/prepaid_service_layout"
                        android:padding="5dp"
                        android:elevation="@dimen/bottom_navigation_elevation"
                        android:orientation="horizontal"
                        android:background="@color/colorlycadark"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Reseller Registration"
                            android:textColor="@color/white"
                            android:fontFamily="@font/sansation_bold"
                            android:textSize="20dp"
                            android:layout_gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:background="@color/colorlycadark"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:paddingTop="10dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Billing Address"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sansation_bold"
                            android:layout_marginLeft="2dp"

                            />
                    </LinearLayout>
