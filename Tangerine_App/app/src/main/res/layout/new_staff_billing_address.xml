                    <include layout="@layout/new_staff_my_new_adderss"
                        />

                    <LinearLayout
                        android:id="@+id/staff_address_container_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                    <Button
                        android:id="@+id/staff_add_more"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button"
                        android:text="Add Address"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_gravity="right"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"/>


                    <LinearLayout
                        android:id="@+id/container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="15dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginBottom="20dp"
                            android:paddingLeft="5dp">

                            <Button
                                android:id="@+id/staff_backbilling_btn"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/sansation_bold"
                                android:background="@drawable/button"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:padding="2dp"
                                android:textSize="17sp"
                                android:textColor="@color/white"
                                android:text="Back"/>
                            <Button
                                android:id="@+id/new_staff_billing_savecontinue_btn"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:fontFamily="@font/sansation_bold"
                                android:layout_weight="1"
                                android:layout_marginLeft="15dp"
                                android:background="@drawable/button"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:padding="2dp"
                                android:textSize="17sp"
                                android:textColor="@color/white"
                                android:text="Save &amp; Continue"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>