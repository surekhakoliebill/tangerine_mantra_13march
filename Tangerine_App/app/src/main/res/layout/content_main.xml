<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_new_order_main_page"
    tools:context=".tangerine.activities.NavigationMainActivity"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/reseller_name_np"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reseller Name"
            android:gravity="center|left"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="@font/sansation_bold"/>
        <TextView
            android:id="@+id/user_group_np"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reseller Aggregator"
            android:gravity="top"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="@color/lightgrey"
            android:fontFamily="@font/sansation_bold"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/login_page_effects"
        card_view:cardBackgroundColor="@color/dark_grey"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="4dp"
        android:visibility="gone"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:text="A"
            android:textAllCaps="false"
            android:textColor="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/sansation_bold"
                android:text="E-Voucher Balance "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:padding="2dp"
                android:textColor="@color/colorlyca"
                android:textStyle="bold|italic"
                android:fontFamily="@font/sansation_bold"
                android:text="2000 UGX"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_left_corner_shape"
            android:orientation="vertical"
            android:text="A"
            android:textAllCaps="false"
            android:textColor="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/sansation_bold"
                android:text="E-Voucher Balance "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:padding="4dp"
                android:textColor="@color/colorlyca"
                android:textStyle="bold|italic"
                android:fontFamily="@font/sansation_bold"
                android:text="2000 UGX "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_right_corner_shape"
            android:orientation="vertical"
            android:textAllCaps="false"
            android:textColor="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/sansation_bold"
                android:text="Monthly Signups "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:textColor="@color/colorlyca"
                android:textStyle="bold|italic"
                android:fontFamily="@font/sansation_bold"
                android:text="2000 "/>
        </LinearLayout>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:background="@drawable/layout_bottom_left_shape"
            android:orientation="vertical"
            android:text="A"
            android:textAllCaps="false"
            android:textColor="@color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/sansation_bold"
                android:text="Available SIM's"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorlyca"
                android:textStyle="bold|italic"
                android:padding="2dp"
                android:fontFamily="@font/sansation_bold"
                android:text="20 "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_bottom_right_shape"
            android:orientation="vertical"
            android:textAllCaps="false"
            android:textColor="@color/black">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/sansation_bold"
                android:text="Available Vouchers"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorlyca"
                android:textStyle="bold|italic"
                android:padding="2dp"
                android:fontFamily="@font/sansation_bold"
                android:text="20 "/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/e_topup_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="E-Topup Recharge"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sansation_bold"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/e_voucher_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="E-Voucher Recharge"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sansation_bold"
            android:background="@drawable/button"/>
        <Button
            android:id="@+id/airtime_btn"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Airtime Recharge"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sansation_bold"
            android:background="@drawable/button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version"
            android:gravity="center|left"
            android:textSize="15sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/lightgrey"
            android:textAllCaps="false"
            android:fontFamily="@font/sansation_bold"/>
        <TextView
            android:id="@+id/version_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "
            android:gravity="center|left"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/lightgrey"
            android:fontFamily="@font/sansation_bold"/>
    </LinearLayout>

</LinearLayout>