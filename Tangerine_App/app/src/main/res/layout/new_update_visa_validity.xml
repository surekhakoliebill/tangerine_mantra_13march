<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new_order_main_page"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@color/colorlyca">
            <ImageButton
                android:id="@+id/back_imgbtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/back_arrow_white"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update Visa Validity Date"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/sansation_bold"
                android:gravity="center|left"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="200dp"
                    android:id="@+id/username_text"
                    android:layout_height="50dp"
                    android:maxLines="4"
                    android:fontFamily="@font/sansation_bold"
                    android:hint="UserName" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/check_btn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/sansation_bold"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:padding="2dp"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="Search User"/>
        </LinearLayout>

        <ListView
            android:id="@+id/foreign_user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone">

        </ListView>

    </LinearLayout>


</LinearLayout>