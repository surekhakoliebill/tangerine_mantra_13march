<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_new_order_main_page">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/colorlyca">
        <ImageButton
            android:id="@+id/back_imgbtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/back_arrow_white"
            />
        <TextView
            android:id="@+id/header_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:fontFamily="@font/sansation_bold"
            android:background="@color/colorlycadark"
            android:text="Stock Request"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <Button
        android:id="@+id/stock_req_button"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:text="Stock Request"
        android:textAllCaps="false"
        android:layout_marginLeft="10dp"
        android:textSize="19sp"
        android:fontFamily="@font/sansation_bold"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:background="@drawable/button"
        android:layout_marginRight="10dp"
        />
</LinearLayout>
    <ListView
        android:id="@+id/etopup_listview"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </ListView>

</LinearLayout>