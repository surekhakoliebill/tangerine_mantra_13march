<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0BB04D" />
            <gradient android:angle="-90" android:startColor="#0BB04D" android:endColor="#006FBA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0BB04D" />
            <solid android:color="#0BB04D"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="3dip" android:color="#0BB04D" />
            <gradient android:angle="-90" android:startColor="#0BB04D" android:endColor="#0BB04D" />
        </shape>
    </item>
</selector>